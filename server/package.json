{
  "name": "revenuemax-server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "drizzle:generate": "npx drizzle-kit generate --out ./drizzle --config ./drizzle.config.ts",
    "drizzle:push": "npx drizzle-kit push --config ./drizzle.config.ts",
    "drizzle:migrate:status": "npx drizzle-kit migrate:status --config ./drizzle.config.ts",
    "drizzle:migrate:up": "npx drizzle-kit migrate:up --config ./drizzle.config.ts",
    "drizzle:migrate:down": "npx drizzle-kit migrate:down --config ./drizzle.config.ts",
    "migrate": "npm run drizzle:migrate:up",
    "seed": "tsx src/scripts/seed.ts",
    "studio": "drizzle-kit studio --config ./drizzle.config.ts"
},
"dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.11.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^3.12.7",
    "drizzle-studio": "^0.6.4",
    "typescript": "~5.9.3"
  },
  "tsconfig": {
    "compilerOptions": {
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "author": "Sadanand Gopal",
  "description": "Backend server for Mindteck MIS application"
}
